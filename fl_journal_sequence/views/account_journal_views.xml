<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_inherit_sequence" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.sequence</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page name="sequence_setting" string="Sequence Settings">
                    <group>
                        <group string="Sequence">
                            <field name="sequence_number_next"/>
                            <field name="sequence_id"/>
                        </group>
                        <group string="Refund Sequence">
                            <field name="refund_sequence_number_next"/>
                            <field name="refund_sequence_id"/>
                        </group>
                    </group>
                    <group>
                        <button name="create_journal_sequence" string="Create Sequence" type="object"
                                class="oe_highlight" attrs="{'invisible': [('sequence_id', '!=', False), ('refund_sequence_id', '!=', False)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
