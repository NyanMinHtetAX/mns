<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_report_template_view_form" model="ir.ui.view">
        <field name="name">custom.report.template.view.form</field>
        <field name="model">custom.report.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image_1920" widget='image'
                           class="oe_avatar" options='{"preview_image": "image_128"}'/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'required': [('name','!=', True)]}"/>
                        </h1>
                        <field name="report_name"/>
                    </div>
                    <group>
                        <group>
                            <field name="company_name" attrs="{'required': [('company_name','!=', True)]}"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"
                                       attrs="{'required': [('street','!=', True)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"
                                       attrs="{'required': [('street2','!=', True)]}"/>
                                <field name="city" placeholder="City" class="o_address_city"
                                       attrs="{'required': [('city','!=', True)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"
                                       context="{'default_country_id': country_id}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="phone" string="Phone 1"/>
                                <field name="service_phone" string="Phone 2"/>
                            </div>

                        </group>
                        <group>
                            <field name="website" string="Line 1"/>
                            <field name="email" string="Line 2"/>

                            <!-- For Customize Header Footer -->
                            <field name="title1" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="title2" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="address" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="company_phone" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="social_viber" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="social_mail" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="thank" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="complain" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <field name="remark_note" attrs="{'invisible': [('report_name', '!=', 'customize')]}"/>
                            <!-- For Customize Header Footer -->
                        </group>
                    </group>
                    <!-- <field name="footer" placeholder="Footer"/> -->
                    <field name="note" placeholder="Terms &amp; Conditions"/>
                    <notebook>
                        <page string="Bank Information" name="info">
                            <field name="bank_info_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="number"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="number"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="custom_report_template_view_tree" model="ir.ui.view">
        <field name="name">custom.report.template.view.tree</field>
        <field name="model">custom.report.template</field>
        <field name="arch" type="xml">
            <tree string="Report Template">
                <field name="name"/>
                <field name="company_name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>


    <record id="custom_report_template_action" model="ir.actions.act_window">
        <field name="name">Report Template</field>
        <field name="res_model">custom.report.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="custom_report_template_menu"
            name="Report Template"
            action="custom_report_template_action"
            parent="base.menu_users"
            sequence="10"/>
</odoo>
