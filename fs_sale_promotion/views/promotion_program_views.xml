<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_promotion_program_form" model="ir.ui.view">
        <field name="name">promotion.program.form</field>
        <field name="model">promotion.program</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active"
                                type="object"
                                icon="fa-archive"
                                class="oe_stat_button">
                            <span class="text-success" attrs="{'invisible': [('active', '!=', True)]}">Active</span>
                            <span class="text-danger" attrs="{'invisible': [('active', '=', True)]}">Inactive</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="use_promo_code"
                                   widget="boolean_toggle"
                                   attrs="{'invisible': [('type', '=', 'disc_multi_catego')]}"/>
                            <field name="promo_code"
                                   attrs="{'required': [('use_promo_code', '=', True)],
                                           'invisible': ['|', ('use_promo_code', '!=', True),
                                                              ('type', '=', 'disc_multi_catego')]}"/>
                            <field name="category_ids"
                                   widget="many2many_tags"
                                   attrs="{'invisible': [('type', '!=', 'disc_multi_catego')],
                                           'required': [('type', '=', 'disc_multi_catego')]}"/>
                            <field name="multi_category_discount_type"
                                   attrs="{'invisible': [('type', '!=', 'disc_multi_catego')],
                                           'required': [('type', '=', 'disc_multi_catego')]}"/>
                            <field name="multi_category_discount"
                                   attrs="{'invisible': [('type', '!=', 'disc_multi_catego')],
                                           'required': [('type', '=', 'disc_multi_catego')]}"/>
                            <field name="multi_category_discount_product_id"
                                   attrs="{'invisible': [('type', '!=', 'disc_multi_catego')],
                                           'required': [('type', '=', 'disc_multi_catego')]}"/>
                            <field name="price_range_based_on"
                                   attrs="{'required': [('type', '=', 'promo_based_price_segment_multi')],
                                           'invisible': [('type', '!=', 'promo_based_price_segment_multi')]}"/>
                            <field name="disc_on_combination_qty_total_qty"
                                   attrs="{'required': [('type', '=', 'disc_comb_prods_qty')],
                                           'invisible': [('type', '!=', 'disc_comb_prods_qty')]}"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                            <field name="use_promo_code"
                                   widget="boolean_toggle"
                                   attrs="{'invisible': [('type', '!=', 'disc_multi_catego')]}"/>
                            <field name="promo_code"
                                   attrs="{'required': [('use_promo_code', '=', True)],
                                           'invisible': ['|', ('use_promo_code', '!=', True),
                                                              ('type', '!=', 'disc_multi_catego')]}"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'buy_x_get_y')]}">
                            <field name="buy_x_get_y_line_ids">
                                <tree editable="bottom">
                                    <field name="product_x_id"/>
                                    <field name="operator"/>
                                    <field name="product_x_qty" string="Qty(X)"/>
                                    <field name="product_y_id"/>
                                    <field name="product_y_qty" string="Qty(Y)"/>
                                    <field name="promotion_account_id"/>
                                </tree>
                            </field>'
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'disc_on_total_amt')]}">
                            <group>
                                <group>
                                    <field name="order_amount" attrs="{'required': [('type', '=', 'disc_on_total_amt')]}"/>
                                    <field name="operator" attrs="{'required': [('type', '=', 'disc_on_total_amt')]}"/>
                                    <field name="product_id" attrs="{'required': [('type', '=', 'disc_on_total_amt')]}"/>
                                </group>
                                <group>
                                    <field name="reward_type" attrs="{'required': [('type', '=', 'disc_on_total_amt')]}"/>
                                    <field name="discount"
                                           string="Discount(Fixed)"
                                           attrs="{'required': [('type', '=', 'disc_on_total_amt')],
                                                   'invisible': [('reward_type', '!=', 'fixed_disc')]}"/>
                                    <field name="discount"
                                           string="Discount(Percentage)"
                                           attrs="{'required': [('type', '=', 'disc_on_total_amt')],
                                                   'invisible': [('reward_type', '!=', 'percent_disc')]}"/>
                                    <field name="account_id" attrs="{'invisible': [('reward_type', '!=', 'foc')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'disc_on_qty')]}">
                            <field name="disc_on_qty_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="operator"/>
                                    <field name="qty"/>
                                    <field name="discount_type"/>
                                    <field name="discount_amt"/>
                                    <field name="promotion_product_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'disc_comb_prods')]}">
                            <field name="disc_on_combination_line_ids">
                                <tree editable="bottom">
                                    <field name="product_ids" widget="many2many_tags"/>
                                    <field name="discount_type"/>
                                    <field name="discount_amt"/>
                                    <field name="promotion_product_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'disc_comb_prods_qty')]}">
                            <field name="disc_on_combination_qty_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="min_qty"/>
                                    <field name="discount_type"/>
                                    <field name="discount"/>
                                    <field name="promotion_product_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'promo_based_price_segment_combi')]}">
                            <field name="disc_on_price_and_combination_line_ids">
                                <tree editable="bottom">
                                    <field name="product_ids" widget="many2many_tags"/>
                                    <field name="price_range_from"/>
                                    <field name="price_range_to"/>
                                    <field name="reward_type"/>
                                    <field name="discount"/>
                                    <field name="promotion_product_id"/>
                                    <field name="account_id"/>
                                </tree>
                            </field>'
                        </page>
                        <page string="Conditions" attrs="{'invisible': [('type', '!=', 'promo_based_price_segment_multi')]}">
                            <field name="disc_on_price_range_multi_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                           attrs="{'column_invisible': [('parent.price_range_based_on', '!=', 'product')],
                                                   'required': [('parent.price_range_based_on', '=', 'product')]}"/>
                                    <field name="category_id"
                                           attrs="{'column_invisible': [('parent.price_range_based_on', '!=', 'category')],
                                                   'required': [('parent.price_range_based_on', '=', 'category')]}"/>
                                    <field name="price_range_from"/>
                                    <field name="price_range_to"/>
                                    <field name="reward_type"/>
                                    <field name="discount"/>
                                    <field name="promotion_product_id"/>
                                    <field name="account_id"/>
                                </tree>
                            </field>'
                        </page>
                        <page string="Sales Teams">
                            <field name="team_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_promotion_program_tree" model="ir.ui.view">
        <field name="name">promotion.program.tree</field>
        <field name="model">promotion.program</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="company_id"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="action_promotion_program" model="ir.actions.act_window">
        <field name="name">Promotion Program</field>
        <field name="res_model">promotion.program</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new promotion program here.
            </p>
            <p>
                You'll be able to manage your promotion programs here.
            </p>
        </field>
    </record>
    <menuitem id="menu_promotion_programs"
              name="Promotion Program"
              parent="base_field_sale.menu_master_data_id"
              action="action_promotion_program"
              sequence="100"/>
</odoo>