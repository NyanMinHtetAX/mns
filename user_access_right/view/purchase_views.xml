<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_order_form_bill" model="ir.ui.view">
            <field name="name">purchase.order.form.bill</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('user_access_right.group_purchase_price')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[1]//field[@name='order_line']//tree//field[@name='multi_price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': [('product_type','!=','service')]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>