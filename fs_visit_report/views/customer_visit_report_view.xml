    <record id="view_visit_report_tree" model="ir.ui.view">
        <field name="name">visit.report.tree</field>
        <field name="model">visit.report</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="partner_id"/>
                <field name="sale_team"/>
                <field name="sale_man"/>
                <field name="date"/>
                <field name="vehicles"/>
            </tree>
        </field>
    </record>
    <record id="action_visit_report" model="ir.actions.act_window">
        <field name="name">Customer Visit Report</field>
        <field name="res_model">visit.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer visit here.
            </p>
            <p>
                You'll be able to manage your visit reports here.
            </p>
        </field>
    </record>
