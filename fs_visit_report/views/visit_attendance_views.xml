<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visit_attendance_search" model="ir.ui.view">
        <field name="name">visit.attendance.search</field>
        <field name="model">fs.visit.attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>
    <record id="view_visit_attendance_form" model="ir.ui.view">
        <field name="name">visit.attendance.form</field>
        <field name="model">fs.visit.attendance</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="team_id"/>
                            <field name="user_id"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="duration"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_visit_attendance_tree" model="ir.ui.view">
        <field name="name">visit.attendance.tree</field>
        <field name="model">fs.visit.attendance</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="partner_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="duration"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>
    <record id="action_visit_attendance" model="ir.actions.act_window">
        <field name="name">Customer Visit</field>
        <field name="res_model">fs.visit.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no data.
            </p>
        </field>
    </record>
</odoo>
