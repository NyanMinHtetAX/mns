<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_lines_sql_reports_form" model="ir.ui.view">
        <field name="name">purchase.lines.sql.report.form</field>
        <field name="model">purchase.lines.sql.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="qty_to_get"/>
                            <field name="uom_id"/>
                            <field name="purchaser_id"/>
                            <field name="warehouse_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="amount_of_buy"/>
                            <field name="received_qty"/>
                            <field name="received_amount"/>
                            <field name="return_qty"/>
                            <field name="return_amount"/>
                            <field name="billed_qty"/>
                            <field name="billed_amount"/>
                            <field name="qty_to_receive"/>
                            <field name="amount_to_receive"/>
                            <field name="qty_to_bill"/>
                            <field name="amount_to_bill"/>
                            <field name="discount_amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="purchase_lines_sql_reports_tree" model="ir.ui.view">
        <field name="name">purchase.lines.sql.report.tree</field>
        <field name="model">purchase.lines.sql.report</field>
        <field name="arch" type="xml">
            <tree string="Purchase Report">
                <field name="order_id" optional="show"/>
                <field name="date" optional="hide"/>
                <field name="partner_id" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="qty_to_get" optional="show"/>
                <field name="uom_id" optional="show"/>
                <field name="purchaser_id" optional="hide"/>
                <field name="warehouse_id" optional="hide"/>
                <field name="amount_of_buy" optional="show"/>
                <field name="received_qty" optional="show"/>
                <field name="received_amount" optional="show"/>
                <field name="return_qty" optional="hide"/>
                <field name="return_amount" optional="hide"/>
                <field name="billed_qty" optional="show"/>
                <field name="billed_amount" optional="show"/>
                <field name="qty_to_receive" optional="show"/>
                <field name="amount_to_receive" optional="show"/>
                <field name="qty_to_bill" optional="show"/>
                <field name="amount_to_bill" optional="show"/>
                <field name="discount_amount" optional="show"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_purchase_lines_sql_report" model="ir.actions.act_window">
        <field name="name">Purchase Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.lines.sql.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="purchase_lines_sql_reports_tree"/>
    </record>

    <menuitem
            id="menu_purchase_lines_sql_report"
            name="Purchase Reports"
            parent="purchase.purchase_report_main"
            action="action_purchase_lines_sql_report"
            sequence="400"/>
</odoo>
