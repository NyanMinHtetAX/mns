<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <t t-name="JRReport">
        <t t-name="LoginUser1">
            <section class="dashboard_main_section" id="main_section_login">
                <div class="row" style="padding-top:15px;height:48px">
                    <div class="col-sm-12 mb-4">
                        <div class="row" style="">
                            <div class="col-12 col-sm-12 col-md-8" style="color:#64a638;text-align:center">
                                <h2 class="section-header" style="color:#64a638;">justOrder Detail Report</h2>
                            </div>
                            <div class="col-12 col-sm-12 col-md-4">
                                <form class="form-group">
                                    <select id="top_selling_customer" class="form-control">
                                        <t t-if="widget.time_range == 'this_year'">
                                            <option id="this_year" value="this_year" selected="">
                                                This Year
                                            </option>
                                        </t>
                                        <t t-else="">
                                            <option id="this_year" value="this_year">
                                                This Year
                                            </option>
                                        </t>
                                        <t t-if="widget.time_range == 'this_month'">
                                            <option id="this_month" value="this_month" selected="">
                                                This Month
                                            </option>
                                        </t>
                                        <t t-else="">
                                            <option id="this_month" value="this_month">
                                                This Month
                                            </option>
                                        </t>
                                        <t t-if="widget.time_range == 'this_week'">
                                            <option id="this_week" value="this_week" selected="">
                                                This Week
                                            </option>
                                        </t>
                                        <t t-else="">
                                            <option id="this_week" value="this_week">
                                                This Week
                                            </option>
                                        </t>
                                        <t t-if="widget.time_range == 'last_month'">
                                            <option id="last-month" value="last-month" selected="">
                                                Last Months
                                            </option>
                                        </t>
                                        <t t-else="">
                                            <option id="last-month" value="last-month">
                                                Last Month
                                            </option>
                                        </t>
                                    </select>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                 <hr/>
            </section>
        </t>
