<odoo>
    <record id="fleet_vehicle_log_services_view_form_inherit" model="ir.ui.view">
            <field name="name">fleet.vehicle.log.services.form</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//widget[@name='web_ribbon']" position="after">
                    <div class="oe_button_box" name="button_box">
                            <button name="action_open_service_expense" type="object" class="oe_stat_button"
                                    icon="fa-list-alt">
                                <field name="expense_service_count" widget="statinfo" string="Expense"/>
                            </button>
                    </div>
                </xpath>
                <xpath expr="//field[@name='purchaser_id']" position="after">
                    <field name="expense_product_id" required="1" domain="[('can_be_expensed','=',True)]"/>
                    <field name="employee_id" required="1"/>
                </xpath>
            </field>
     </record>
     <record id="hr_expense_paid_by_form" model="ir.ui.view">
            <field name="name">hr.expense.paid.by.form</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group[1]//group[2]//label[@for='payment_mode']" position="attributes">
                    <attribute name="attrs">{'invisible': [('product_has_cost','=', False)] }</attribute>
                </xpath>
                <xpath expr="//sheet//group[1]//group[2]//div[1]" position="attributes">
                    <attribute name="attrs">{'invisible': [('product_has_cost','=', False)] }</attribute>
                </xpath>
            </field>
     </record>
     <record id="fleet_vehicle_log_services_view_tree_inherit" model="ir.ui.view">
            <field name="name">fleet.vehicle.log.services.tree</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <header>
                        <button name="action_convert_expense" type="object" string="CREATE EXPENSE"
                                class="oe_highlight ml16"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="is_create_done"  invisible="1"/>
                </xpath>
            </field>
     </record>
</odoo>