<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="invoice_form_discount" model="ir.ui.view">
            <field name="name">invoice.form.discount</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="city_id" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="partner_class_id"/>
                    <field name="fleet_id"/>
                    <field name="license_plate"/>
                    <field name="is_sale_order" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" nolabel="1" attrs="{'readonly': [('is_sale_order', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="total_due" class="oe_subtotal_footer_separator" string="Previous Amount Due"/>
                    <field name="total_amount" class="oe_subtotal_footer_separator"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="payment_type"/>
                </xpath>
                <xpath expr="//field[@name='narration']" position="after">
                    <div class="row">
                        <label for="foc_amount" string="FOC Amount"/>
                        <field name="foc_amount" class="col-6"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>