<odoo>
       <record id="customer_class_tree" model="ir.ui.view">
            <field name="name">partner.class.tree</field>
            <field name="model">partner.class</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>
        <record id="action_customer_class" model="ir.actions.act_window">
            <field name="name">Customer Class</field>
            <field name="res_model">partner.class</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Customer Class here.
                </p>
                <p>
                    You'll be able to manage your Customer Class here.
                </p>
            </field>
        </record>

     <menuitem    id="menu_customer_class"
                  name="Customer Class"
                  parent="contacts.res_partner_menu_config"
                  action="action_customer_class"
                  sequence="130"/>
     <menuitem    id="menu_customer_class_sale"
                  name="Customer Class"
                  parent="sale.menu_sale_config"
                  action="action_customer_class"
                  sequence="135"/>

</odoo>