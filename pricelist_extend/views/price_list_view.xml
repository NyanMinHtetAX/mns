        <record id="view_product_pricelist_view_form" model="ir.ui.view">
            <field name="name">product.pricelist.form.inherit</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="profit_percent" invisible="True"/>
                    <field name="categ_id" invisible="True"/>
                    <field name="product_id" invisible="True"/>
                </xpath>
                <xpath expr="//widget[@name='web_ribbon']" position="before">
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" string="View Filter" style="font-weight: bold;" icon="fa-cube"
                                type="object" name="action_tree_view">
                        </button>
                    </div>
                </xpath>

                <xpath expr="//page[@name='pricelist_rules']//field[@name='item_ids']//tree//field[@name='date_end']"
                       position="after">
                    <field name="min_quantity"/>
                    <field name="multi_uom_line_id"/>
                </xpath>
                <xpath expr="//page[@name='pricelist_rules']//field[@name='item_ids']//tree//field[@name='min_quantity']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>


        <record id="view_product_pricelist_item_view_search" model="ir.ui.view">
            <field name="name">product.pricelist.item.search.inherit</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='groupby_vendor']" position="after">
                    <filter string="Product Category" name="Category" domain="[]"
                            context="{'group_by':'computed_categ_id'}"/>
                    <filter string="Profit(%)" name="Profit(%)" domain="[]" context="{'group_by':'profit_percent'}"/>
                    <filter string="Brand Owner" name="brand_owner" domain="[]" context="{'group_by':'brand_owner'}"/>
                </xpath>
                <xpath expr="//search" position="inside">
                    <field name="product_id" string="Product"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_pricelist_item_view_tree" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree.inherit</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="computed_categ_id" string="Product Category" optional="show"/>
                    <field name="profit_percent" string="Profit(%)" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="uom_id" string="UOM" optional="hide"/>
                    <field name="base_display" optional="hide"/>
                    <field name="final_purchase_price" optional="hide"/>
                    <field name="base_pricelist_id" optional="hide"/>
                    <field name="total_price" optional="hide"/>
                     <field name="internal_note" optional="hide"/>
                    <field name="price_surcharge" string="Landed Cost" optional="hide"/>
                    <field name="adjust_amounts" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_pricelist_item_view_tree_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree.inherit</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fixed_price']" position="before">
                    <field name="product_uom" readonly="False"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="computed_categ_id" string="Product Category" optional="show"/>
                    <field name="profit_percent" string="Profit(%)" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="uom_id" string="UOM" optional="hide"/>
                    <field name="base_display" optional="hide"/>
                    <field name="final_purchase_price" optional="hide"/>
                    <field name="base_pricelist_id" optional="hide"/>
                    <field name="total_price" optional="hide"/>
                     <field name="internal_note" optional="hide"/>
                    <field name="price_surcharge" string="Landed Cost" optional="hide"/>
                    <field name="adjust_amounts" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form.inherit</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fixed_price']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='base_display']" position="after">
                    <field name="final_purchase_price" attrs="{'invisible': [('base_display', '!=', 'final_purchase_price')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>