<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_config_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='accounting_section']//div[last()]" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Analytic Account</span>
                        <div class="text-muted">
                            Configure your analytic account here. This analytic account will be used for
                            all point of sale related journals.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <field name="analytic_account_id" class="ml16"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_pos_config_tree_inherit" model="ir.ui.view">
        <field name="name">pos.config.tree.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="analytic_account_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_session_form_inherit" model="ir.ui.view">
        <field name="name">pos.session.form.inherit</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="analytic_account_id" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_session_tree_inherit" model="ir.ui.view">
        <field name="name">pos.session.tree.inherit</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="analytic_account_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="analytic_account_id" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.tree.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="analytic_account_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_payment_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.form.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="analytic_account_id" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_payment_tree_inherit" model="ir.ui.view">
        <field name="name">pos.payment.tree.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="analytic_account_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>