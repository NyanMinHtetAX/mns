<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_adjustment_form" model="ir.ui.view">
        <field name="name">stock.adjustment.form</field>
        <field name="model">stock.adjustment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="btn_start"
                            string="Start Inventory"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="oe_highlight"/>
                    <button name="btn_continue"
                            string="Continue Inventory"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"
                            class="oe_highlight"/>
                    <button name="btn_validate"
                            string="Validate Inventory"
                            type="object"
                            attrs="{'invisible': ['|', ('state', '!=', 'confirm'),('line_ids', '!=', [])]}"/>
                    <button name="btn_validate"
                            string="Validate Inventory"
                            type="object"
                            attrs="{'invisible': ['|', ('state', '!=', 'confirm'),('line_ids', '=', [])]}"
                            class="oe_highlight"/>
                    <button name="btn_cancel"
                            string="CANCEL INVENTORY"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"
                            class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="btn_show_product_moves"
                                string="Product Moves"
                                type="object"
                                attrs="{'invisible':[('move_ids', '=', [])]}"
                                icon="fa-exchange"
                                class="oe_stat_button" />
                        <field name="move_ids" invisible="1"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Reference" class="oe_edit_only"/>
                        <h1><field name="name" readonly="1" force_save="1"/></h1>
                    </div>
                    <field name="line_ids" invisible="1"/>
                    <group>
                        <group>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="location_ids"
                                   widget="many2many_tags"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="product_ids"
                                   widget="many2many_tags"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="date"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="counted_qty_type"
                                   widget="radio"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_stock_adjustment_search" model="ir.ui.view">
        <field name="name">stock.adjustment.search</field>
        <field name="model">stock.adjustment</field>
        <field name="arch" type="xml">
            <search string="Search Adjustment">
                <field name="name"/>
                <field name="description"/>
                <field name="line_ids" string="Product" filter_domain="[('line_ids.product_id', 'ilike', self)]"/>
                <field name="line_ids" string="Location" filter_domain="[('line_ids.location_id', 'ilike', self)]"/>
            </search>
        </field>
    </record>
    <record id="view_stock_adjustment_tree" model="ir.ui.view">
        <field name="name">stock.adjustment.tree</field>
        <field name="model">stock.adjustment</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'done'"
                  decoration-info="state == 'confirm'"
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="description"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_stock_adjustment" model="ir.actions.act_window">
        <field name="name">Backdate Adjustment</field>
        <field name="res_model">stock.adjustment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_stock_adjustment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new backdate adjustment here.
            </p>
            <p>
                You'll be able to manage your adjustments here.
            </p>
        </field>
    </record>
    <menuitem id="menu_stock_adjustment"
              name="Backdate Adjustment"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_stock_adjustment"
              sequence="35"/>

    <menuitem id="stock.menu_action_inventory_tree"
              name="Inventory Adjustments"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="30"
              action="stock.action_view_inventory_tree"
              groups="make_invisible"
    />

    <!--  Adjustment Line  -->
    <record id="view_stock_adjustment_line_tree" model="ir.ui.view">
        <field name="name">stock.adjustment.line.tree</field>
        <field name="model">stock.adjustment.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" js_class="adjustment_list_view">
                <field name="date" optional="hide"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="theoretical_qty" string="On Hand"/>
                <field name="product_qty" string="Counted"/>
                <field name="difference_qty" string="Difference"/>
                <field name="state" invisible="1"/>
                <field name="adjustment_id" invisible="1"/>
                <field name="move_id" invisible="1"/>
                <field name="origin" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>