<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_inherit_delivery_pdf" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.pdf</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group//field[@name='origin']" position="after">
                    <field name="sale_person_id"/>
                    <field name="purchaser_id" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
            </field>
        </record>
        <record id="stock_picking_inherit_delivery_form" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="sale_extend.view_stock_picking_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='license_plate']" position="before">
                    <field name="helper_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>