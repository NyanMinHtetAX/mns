<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_company_form_inherit_inv" model="ir.ui.view">
            <field name="name">res.company.form.inherit.inv</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//notebook//page//group//group[1]//field[@name='currency_id']" position="after">
                    <field name="shop1_add" />
                    <field name="shop1_phone" />
                    <field name="shop1_fax" />
                </xpath>
                <xpath expr="//form//notebook//page//group//group[2]//field[@name='website']" position="after">
                    <field name="fax_no" />
                    <field name="service_phone" />
                    <field name="service_mail" />
                    <field name="shop2_add" />
                    <field name="shop2_phone" />
                    <field name="shop2_fax" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>