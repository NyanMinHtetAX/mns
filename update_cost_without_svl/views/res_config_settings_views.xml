<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Update Cost Without GL</h2>
                <div class="row mt16 o_settings_container" id="update_cost_without_svl">
                    <div class="col-12 col-lg-6 o_setting_box" title="Allow you to update cost without generating valuation journals">
                        <div class="o_setting_left_pane">
                            <field name="group_update_cost_without_svl"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_update_cost_without_svl" string="Update Cost Without GL"/>
                            <div class="text-muted">
                                To adjust cost of products without generating valuation journals.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>