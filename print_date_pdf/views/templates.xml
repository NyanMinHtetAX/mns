<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="custom_report_external_layout_standard_header_with_print_date"
                  inherit_id="web.external_layout_standard">
            <div t-attf-class="header o_company_#{company.id}_layout" position="inside">
                <t t-set="print_date"
                   t-value="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d - %H:%M:%S')"/>
                <div class="row">
                    <div class="col-12">
                        <p class="text-right small">Printed Date
                            <t t-esc="print_date"/>
                            UTC
                        </p>
                    </div>
                </div>
            </div>
        </template>

