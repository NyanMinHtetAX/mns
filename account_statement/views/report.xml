<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report 
            id="report_customert_print"
            string="Customer Statement"
            model="res.partner" 
            report_type="qweb-pdf"
            file="account_statement.report_customer" 
            name="account_statement.report_customer" 
            attachment="(object.name + '_Customer_Statement.pdf')"
        />
        
         <report 
            id="report_supplier_print"
            string="Supplier Statement"
            model="res.partner" 
            report_type="qweb-pdf"
            file="account_statement.report_supplier" 
            name="account_statement.report_supplier" 
        />
        
        <report 
            id="report_customer_monthly_print" 
            string="Customer Monthly Statement"
		    model="res.partner" 
		    report_type="qweb-pdf"
		    file="account_statement.monthly_customer_statement"
		    name="account_statement.monthly_customer_statement" 
            attachment="(object.name + '_Customer_Monthly_Statement.pdf')"
		/>


         <report 
            id="report_customer_overdue_print"
            string="Customer Overdue Statement"
            model="res.partner" 
            report_type="qweb-pdf"
            file="account_statement.bi_report_overdue_due" 
            name="account_statement.bi_report_overdue_due" 
            attachment="(object.name + '_Customer_Overdue_Statement.pdf')"
        />
        
        
        <report 
            id="report_customer_weekly_print"
            string="Customer Weekly Statement"
            model="res.partner" 
            report_type="qweb-pdf"
            file="account_statement.weekly_customer_statement" 
            name="account_statement.weekly_customer_statement" 
            attachment="(object.name + '_Customer_Weekly_Statement.pdf')"
        />
         <record id="a4_paper_statement_report" model="report.paperformat">
            <field name="name">Customized A4(Statement)</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top" eval="41"/>
            <field name="margin_bottom" eval="20"/>
            <field name="margin_left" eval="11"/>
            <field name="margin_right" eval="0"/>
            <field name="header_line" eval="False"/>
            <field name="header_spacing" eval="30"/>
            <field name="dpi" eval="90"/>
            <field name="report_ids" eval="[(6,0, [ref('account_statement.report_customert_print'),ref('account_statement.report_supplier_print'),ref('account_statement.report_customer_monthly_print'),ref('account_statement.report_customer_overdue_print'),ref('account_statement.report_customer_weekly_print')])]"/>
        </record>

    </data>
</odoo>
