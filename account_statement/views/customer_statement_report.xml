<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_customer_statement">
            <div class="header" style="width:100%;font-family: Calibri, Candara, Segoe, Segoe UI, Optima, Arial, sans-serif;">
            <div class="row" style="width:100%">
                <div class="col-md-6" style="width:50%;">
                    <div style="width:100%">
                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" class="float-left" style="max-height: 160px;margin-left:-21px" alt="Logo"/>

                    </div>
                </div>
                <div class="col-md-6" style="width:50%;margin-top:18px">
                    <div class="row" style="width:100%">
                        <div class="col-md-2" style="width:10%"/>
                        <div class="col-md-8" style="width:89%;;margin-left:69px">
                            <div class="row1" style="text-align:left;width:100%;margin-left:80px">
                                <span style="font-size:18px">
                                    <strong>SC Auto (Myanmar) Co.Ltd</strong>
                                </span>
                            </div>
                            <div class="row2" style="width:100%;;text-align:left;margin-left:80px">
                                <span class="list-inline-item d-inline" style="font-size:13.5px">No.188 and 189, 10Th
                                    Street,Yangon
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Industrial
                                    Zone,Mingalardon Township,
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Yangon 11021, Myanmar
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Tax Reg: 1101626685
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">website:
                                    www.scauto.com.sg
                                </span>
                            </div>

                        </div>
                        <div class="col-md-2" style="width:1%"/>
                    </div>
                </div>
            </div>
        </div>
            <div class="footer o_standard_footer">
                <div class="text-center" >
                    <br/>
                      <div class="row" style="width:100%;font-size:14px">
                          <div class="col-md-6" style="width:50%;">

                          </div>
                           <div class="col-md-6" style="width:50%">

                                <div class="row" style="width:100%">
                                  <div class="col-md-6" style="width:50%;text-align:left">
                                  </div>
                                  <div class="col-md-6" style="width:50%;text-align:left">
                                      <br/>
                                     <div class="text-muted" style="width:100%">
                                       <div t-if="report_type == 'pdf'" style="text-align:right">
                                           Page: <span class="page"/> / <span class="topage"/>
                                       </div>
                                      </div>
                                  </div>
                              </div>
                           </div>
                      </div>
                </div>
            </div>
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.lang})"/>
                <t t-set="company" t-value="res_company"/>
                <div class="page">
                    <br/>
                    <t t-set="i" t-value="0.0"/>
                    <t t-set="j" t-value="0.0"/>
                    <t t-set="k" t-value="0.0"/>
                    <t t-foreach="doc.balance_invoice_ids" t-as="line">
                        <t t-set="i" t-value="i+ line.amount_total_signed"/>
                        <t t-set="j" t-value="j+line.credit_amount"/>
                        <t t-set="k" t-value="k+line.result"/>
                    </t>
                    <table class="table table-condensed">
                        <thead>
                            <tr class="text-center">
                                <th>Date</th>
                                <th>Invoice Number</th>
                                <th class="text-left">Invoice Due Date</th>
                                <th>Invoices/Debit</th>
                                <th>Payments/Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>
                                    <b>Initial Balance</b>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">
                                    <b>
                                        <span t-esc="0.0"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </b>
                                </td>
                            </tr>
                            <t t-set="grand_total" t-value="0.0"/>
                            <t t-set="bal" t-value="0.0"/>
                            <t t-set="sub_total" t-value="0.0"/>
                            <tr t-foreach="doc.balance_invoice_ids.sorted(key=lambda r: r.name)" t-as="line">
                                <t t-set="bal" t-value="bal +sub_total "/>
                                <td>
                                    <span t-esc="line.invoice_date"/>
                                </td>
                                <td>
                                    <span t-esc="line.name"/>
                                </td>
                                <td>
                                    <span t-esc="line.invoice_date_due"/>
                                </td>

                                <td class="text-right">
                                    <span t-esc="line.amount_total_signed"
                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line.credit_amount"
                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <t t-set="sub_total" t-value="line.amount_total_signed-line.credit_amount"/>
                                    <t t-set="grand_total" t-value="sub_total + bal"/>
                                    <span t-esc="sub_total + bal"
                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <b>Ending Balance</b>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">
                                    <b>
                                        <span t-esc="grand_total"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </b>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td>
                                    <strong>Total Amount OverDue :</strong>
                                </td>
                                <td class="text-right">
                                    <strong>
                                        <span t-field="doc.payment_amount_overdue_amt"
                                              t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/>
                                    </strong>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td>
                                    <strong>Balance Due :</strong>
                                </td>
                                <td class="text-right">
                                    <strong>
                                        <span t-field="doc.payment_amount_due_amt"
                                              t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br/>

                    <table t-attf-class="table table-sm" name="days_table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>0-30</th>
                                <th>30-60</th>
                                <th>60-90</th>
                                <th>90+</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tr>
                            <td></td>
                            <td>
                                <span t-esc="doc.first_thirty_day"/>
                            </td>
                            <td>
                                <span t-esc="doc.thirty_sixty_days"/>
                            </td>
                            <td>
                                <span t-esc="doc.sixty_ninty_days"/>
                            </td>
                            <td>
                                <span t-esc="doc.ninty_plus_days"/>
                            </td>
                            <td>
                                <span t-esc="doc.total"/>
                            </td>
                        </tr>
                    </table>

                </div>

            </t>
        </template>

        <template id="report_customer">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="account_statement.report_customer_statement" t-lang="doc.lang"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
