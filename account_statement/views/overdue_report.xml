<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_overdue_statement">
			   <div class="header" style="width:100%;font-family: Calibri, Candara, Segoe, Segoe UI, Optima, Arial, sans-serif;">
            <div class="row" style="width:100%">
                <div class="col-md-6" style="width:50%;">
                    <div style="width:100%">
                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" class="float-left" style="max-height: 160px;margin-left:-21px" alt="Logo"/>

                    </div>
                </div>
                <div class="col-md-6" style="width:50%;margin-top:18px">
                    <div class="row" style="width:100%">
                        <div class="col-md-2" style="width:10%"/>
                        <div class="col-md-8" style="width:89%;;margin-left:69px">
                            <div class="row1" style="text-align:left;width:100%;margin-left:80px">
                                <span style="font-size:18px">
                                    <strong>SC Auto (Myanmar) Co.Ltd</strong>
                                </span>
                            </div>
                            <div class="row2" style="width:100%;;text-align:left;margin-left:80px">
                                <span class="list-inline-item d-inline" style="font-size:13.5px">No.188 and 189, 10Th
                                    Street,Yangon
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Industrial
                                    Zone,Mingalardon Township,
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Yangon 11021, Myanmar
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">Tax Reg: 1101626685
                                </span>
                                <br/>
                                <span class="list-inline-item d-inline" style="font-size:13.5px">website:
                                    www.scauto.com.sg
                                </span>
                            </div>

                        </div>
                        <div class="col-md-2" style="width:1%"/>
                    </div>
                </div>
            </div>
        </div>
                <div class="footer o_standard_footer">
                <div class="text-center" >
                    <br/>
                      <div class="row" style="width:100%;font-size:14px">
                          <div class="col-md-6" style="width:50%;">

                          </div>
                           <div class="col-md-6" style="width:50%">

                                <div class="row" style="width:100%">
                                  <div class="col-md-6" style="width:50%;text-align:left">
                                  </div>
                                  <div class="col-md-6" style="width:50%;text-align:left">
                                      <br/>
                                     <div class="text-muted" style="width:100%">
                                       <div t-if="report_type == 'pdf'" style="text-align:right">
                                           Page: <span class="page"/> / <span class="topage"/>
                                       </div>
                                      </div>
                                  </div>
                              </div>
                           </div>
                      </div>
                </div>
            </div>
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang':doc.lang})" />
				<t t-set="company" t-value="res_company"/>
				<div class="page">
					<br/>
					<div class="text-left">
						<span>Customer account statement</span><br/>
						<span>Date : </span><span t-esc="datetime.date.today()" /><br/>
						<br/>
						<span>Dear Sir/Madam,</span><br/>
						<br/>
						<span>Some payments on your account are still due. Please find details below.</span><br/>
						<br/>
						<span>Thank you.</span><br/>
						<span>Best Regards,</span><br/>
					</div>
					<t t-if="doc.balance_invoice_ids.ids">
						<table class="table table-condensed" >
							<thead>
								<tr>
									<th>Reference number</th>
									<th class="text-center">Date</th>
									<th class="text-center">Due Date</th>
									<th>Communication</th>
									<th class="text-right">Total</th>
									<th class="text-right">Due</th>
									<th class="text-right">Paid</th>
									<!-- <th class="text-center">Litigation</th> -->
								</tr>
							</thead>
							<t t-set="due_total" t-value="0"/>
							<t t-set="paid_total" t-value="0"/>
							<t t-set="total" t-value="0"/>
							<tr t-foreach="doc.balance_invoice_ids" t-as="line">
								<t t-if="datetime.date.today() > line.invoice_date_due  ">
									<t t-if="line.invoice_payment_state !='paid' ">
										<td>
											<span t-esc="line.name"/>
										</td>
										<td>
											<span t-esc="line.invoice_date"/>
										</td>
										<td>
											<span t-esc="line.invoice_date_due"/>
										</td>
										<td>
										   <span t-esc="line.name" />
										</td>
										<td class="text-right">
											<span t-esc="line.amount_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
										</td>
										<td class="text-right">
											<span t-esc="line.result" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
										</td>
										<td class="text-right">
											<span t-esc="line.credit_amount" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
										</td>
										<!-- <td class="text-center"></td> -->
										<t t-set="due_total" t-value="due_total + line.amount_total"/>
										<t t-set="paid_total" t-value="paid_total + line.credit_amount"/>
										<t t-set="total" t-value="total + line.result"/>
									</t>
								</t>
							</tr>
							<tr>
								<td colspan="3"></td>
								<td><strong>Sub-Total :</strong></td>
								<td class="text-right"><span t-esc="due_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
								<td class="text-right"><span t-esc="total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
								<td class="text-right"><span t-esc="paid_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
								<td></td>
							</tr>
							<tr>
								<td colspan="3"></td>
								<td><strong>Balance :</strong></td>
								<td></td>
								<td class="text-right">
									<span t-esc="total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
								</td>
							</tr>
						</table>
					</t>
				</div>
			</t>
		</template>

		<template id="bi_report_overdue_due">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="account_statement.report_overdue_statement" t-lang="doc.lang" />
				</t>
			</t>
		</template>
	</data>
</odoo>


