<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']//tree//field[@name='product_uom_id']" position="replace">
                <field name="multi_uom_line_id"
                       string="UoM"
                       domain="[('id', 'in', multi_uom_line_ids)]"
                       groups="uom.group_uom"/>
                <field name="product_uom_id" invisible="1"/>
                <field name="multi_uom_line_ids" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='qty']" position="replace">
                <field name="multi_uom_qty" string="Quantity"/>
                <field name="qty" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='price_unit']" position="replace">
                <field name="multi_uom_price" widget="monetary" string="Unit Price"/>
                <field name="price_unit" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='discount']" position="replace">
                <field name="multi_uom_discount" string="Disc.%"/>
                <field name="discount" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>