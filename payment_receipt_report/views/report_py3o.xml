        <field name="name">Cash Receipt PDF</field>
        <field name="model">account.payment</field>
        <field name="report_type">py3o</field>
        <field name="report_name">payment_receipt_report.cash_receipt_pdf_report</field>
        <field name="report_file">payment_receipt_report.cash_receipt_pdf_report</field>
        <field name="py3o_filetype">pdf</field>
        <field name="module">payment_receipt_report</field>
        <field name="py3o_template_fallback">reports/payment_receipt.odt</field>
