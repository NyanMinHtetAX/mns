<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hr_expense_sheet_form_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="analytic_account_id"/>
            </xpath>
        </field>
    </record>

    <record id="group_hr_expense_sheet_tree_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.tree</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="product_id"/>
                <field name="category"/>
            </xpath>
        </field>
    </record>

        <record id="group_hr_expense_sheet_search_inherit" model="ir.ui.view">
            <field name="name">hr.expense.sheet.search</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_sheet_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='state']" position="after">
                    <filter string="Category" domain="[]" name="Category" context="{'group_by':'category'}"/>
                    <filter string="Product" domain="[]" context="{'group_by':'product_id'}" name="product"/>
                </xpath>
            </field>
        </record>
</odoo>