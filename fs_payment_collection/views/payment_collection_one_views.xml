<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_payment_collection_one_form" model="ir.ui.view">
        <field name="name">payment.collection.one.form</field>
        <field name="model">payment.collection.one</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="btn_confirm"
                            string="Confirm"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="oe_highlight"/>
                    <button name="btn_approve_real"
                            string="Approve"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="invoice_address_id" attrs="{'readonly': [('state', '!=', 'draft')]}" string="Receipt Department" required="1"/>
                            <field name="invoice_address" string="Receipt Department Address" readonly="1" force_save="1"/>
                            <field name="sale_man_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="team_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mobile_ref" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="to_collect_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="to_collect_amt" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="collected_amt" readonly="1"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        
                        <page name="payments" string="Payments">
                            <field name="payment_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="payment_method_id"/>
                                    <field name="amount"/>
                                    <field name="currency_id"/>
                                    <field name="payment_collection_id" invisible="1"/>
                                    <field name="journal_id" invisible="1"/>

                            <field name="remark" />
                                </tree>
                            </field>
                        </page>
                        <page string="Department Signature" name="customer_signature">
                            <group>
                                <field name="signed_by"/>
                                <field name="signed_on"/>
                                <field name="signature" widget="image"/>
                            </group>
                        </page>
                        <page string="Salesman Signature" name="salesman_signature">
                            <group>
                                <field name="salesman_signed_by"/>
                                <field name="salesman_signed_on"/>
                                <field name="salesman_signature" widget="image"/>
                            </group>
                        </page>
                        <page string="Slip">
                            <field name="slip_image" widget="image"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--Group By-->
    <record id="view_payment_collection_one_search" model="ir.ui.view">
        <field name="name">payment.collection.one.search</field>
        <field name="model">payment.collection.one</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="sale_man_id"/>
                <field name="team_id"/>
                <field name="date"/>
                <field name="to_collect_date"/>
                <field name="mobile_ref"/>
                <filter name="to_approve" string="To Approve" domain="[('state', 'in', ['draft', 'confirm'])]"/>
                <separator/>
                <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>

    <record id="view_payment_collection_one_tree" model="ir.ui.view">
        <field name="name">payment.collection.one.tree</field>
        <field name="model">payment.collection.one</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mobile_ref"/>
                <field name="partner_id"/>
                <field name="sale_man_id"/>
                <field name="team_id"/>
                <field name="date"/>
                <field name="to_collect_date"/>
                <field name="company_id"/>
                <field name="state"
                       widget="badge"
                       decoration-info="state == 'confirm'"
                       decoration-success="state == 'approve'"/>
            </tree>
        </field>
    </record>
    <record id="view_payment_collection_one_payment_tree" model="ir.ui.view">
        <field name="name">payment.collection.one.payment.tree</field>
        <field name="model">payment.collection.one.payment.line</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="payment_method_id"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="currency_id"/>
                <field name="payment_collection_id"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>
    <record id="view_payment_collection_one_payment_form" model="ir.ui.view">
        <field name="name">payment.collection.one.payment.form</field>
        <field name="model">payment.collection.one.payment.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                <field name="payment_method_id"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="amount"/>
            </group>
            <group>
                <field name="date"/>
                <field name="currency_id"/>
                <field name="payment_collection_id"/>
                <field name="remark"/>
            </group>
            </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="action_payment_collection_one" model="ir.actions.act_window">
        <field name="name">Advanced Payment</field>
        <field name="res_model">payment.collection.one</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new advanced payment here.
            </p>
            <p>
                You'll be able to manage your advacned payment here.
            </p>
        </field>
    </record>
    <record id="action_payment_collection_one_line" model="ir.actions.act_window">
        <field name="name">Advanced Payment Line</field>
        <field name="res_model">payment.collection.one.payment.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new advanced payment line here.
            </p>
            <p>
                You'll be able to manage your advanced payment line here.
            </p>
        </field>
    </record>
    <record id="action_payment_collection_one_to_approve" model="ir.actions.act_window">
        <field name="name">Advanced Payment Collection</field>
        <field name="res_model">payment.collection.one</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'confirm')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new advanced payment collection here.
            </p>
            <p>
                You'll be able to manage your advanced payment here.
            </p>
        </field>
    </record>
    <menuitem id="menu_payment_collection_one"
              name="Advanced Payment"
              parent="base_field_sale.menu_operation_id"
              action="action_payment_collection_one"
              sequence="16"/>
