<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_assign_cash_collector_form" model="ir.ui.view">
        <field name="name">assign.to.cash.collector.form</field>
        <field name="model">assign.to.cash.collector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="team_id"/>
                        </group>
                    </group>
                    <field name="invoice_ids" invisible="1"/>
                </sheet>
                <footer>
                    <button name="btn_assign"
                            string="Assign"
                            type="object"
                            class="oe_highlight"/>
                    -
                    <button special="cancel"
                            string="CANCEL"
                            class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>