<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="after">
                <field name="purchase_foc_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_purchase_foc_form" model="ir.ui.view">
        <field name="name">purchase.foc.form</field>
        <field name="model">purchase.foc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    <group>
                        <group string="Product to Purchase">
                            <field name="product_x_id" string="Product" required="1"/>
                            <field name="product_x_qty" string="Qty" required="1"/>
                            <field name="product_x_multi_uom_line_id"
                                   domain="[('product_tmpl_id', '=', product_x_tmpl_id)]"
                                   string="UoM"
                                   required="1"/>
                            <field name="product_x_tmpl_id" invisible="1"/>
                        </group>
                        <group string="FOC Product">
                            <field name="product_y_id" string="Product" required="1"/>
                            <field name="product_y_qty" string="Qty" required="1"/>
                            <field name="product_y_multi_uom_line_id"
                                   domain="[('product_tmpl_id', '=', product_y_tmpl_id)]"
                                   string="UoM"
                                   required="1"/>
                            <field name="product_y_tmpl_id" invisible="1"/>
                        </group>
                    </group>
                    <field name="remarks" nolabel="1" placeholder="Remarks"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_purchase_foc_tree" model="ir.ui.view">
        <field name="name">purchase.foc.tree</field>
        <field name="model">purchase.foc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>
    <record id="action_purchase_foc" model="ir.actions.act_window">
        <field name="name">Purchase FOC</field>
        <field name="res_model">purchase.foc</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new purchase foc record here.
            </p>
            <p>
                You'll be able to manage your purchase foc records here.
            </p>
        </field>
    </record>
    <menuitem id="menu_purchase_foc"
              name="Purchase FOC"
              parent="purchase.menu_procurement_management"
              action="action_purchase_foc"
              sequence="20"/>
</odoo>