<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.customer.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="sale_credit_limit" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_tree_inherit-1" model="ir.ui.view">
            <field name="name">account.move.tree.customer.inherit-1</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="purchase_credit_limit" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                    <field name="is_foc" attrs="{'column_invisible': [('parent.move_type', 'not in', ['out_invoice', 'out_refund', 'out_receipt'])]}"/>
                </xpath>
                <xpath expr="//label[@for='journal_id']" position="before">
                    <field name="purchase_credit_limit" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund','in_receipt'))]}"/>
                    <field name="total_due" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund','in_receipt'))]}"/>
                </xpath>
        </field>
    </record>

</odoo>
