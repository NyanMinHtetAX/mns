<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_order_form_customer" model="ir.ui.view">
            <field name="name">sale.order.form.customer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('customer', '=', True)]</attribute>
                    <attribute name="context">{'default_supplier':0, 'default_customer':1, 'show_address':1, 'show_vat':True, 'display_website': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="credit_limit"/>
                    <field name="total_due" force_save="1" />
                    <field name="invoice_date_due" force_save="1"/>
                    <field name="sale_date" invisible="1"/>
                    <field name="over_credit" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="before">
                    <field name="is_foc"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('qty_invoiced', '&gt;', 0), ('is_foc', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
