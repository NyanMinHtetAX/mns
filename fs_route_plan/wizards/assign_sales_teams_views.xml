<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_assign_sales_teams_form" model="ir.ui.view">
        <field name="name">assign.sales.teams.form</field>
        <field name="model">assign.sales.teams</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sale_team_id"/>
                        </group>
                    </group>
                    <field name="route_plan_id" invisible="1"/>
                </sheet>
                <footer>
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                    <button name="btn_assign" string="Assign" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_assign_sales_teams" model="ir.actions.act_window">
        <field name="name">Assign Sales Teams</field>
        <field name="res_model">assign.sales.teams</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>