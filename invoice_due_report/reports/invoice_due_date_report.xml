<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="tree_stock_age_report_stock_age_sql_report">
			<field name="name">Credit on Return Report</field>
			<field name="model">invoice.due.sql.view</field>
			<field name="arch" type="xml">
				<tree string="Invoice Due Report" create="0" delete = '0'> 
					<field name = 'invoice_id' />
					<field name = 'amj_id' invisible="1"/>
					<field name = 'partner_id' />
					<field name = 'sale_team_id' />
					<field name = 'sale_person_id' />
					<field name = 'invoice_date' />
					<field name= 'company_id'/>
					<field name='currency_id'/>
					<field name = 'due_date' />
					<field name = 'paid_date' />
					<field name = 'paid_amount' widget = 'monetary' />
					<field name = 'total_amount'  widget = 'monetary'/>
				</tree>
			</field>
		</record>

		<record id="search_stock_age_report_stock_age_sql_report" model="ir.ui.view">
            <field name="name">Credit on Return Report Search</field>
			<field name="model">invoice.due.sql.view</field>
            <field name="arch" type="xml">
                <search string="Invoice Due Report">
                    <field name="invoice_id"/>
                    <field name="partner_id"/>
                    <field name="sale_team_id"/>
                    <field name="sale_person_id"/>
                    <field name="invoice_date"/>
                    <field name="company_id"/>
                    <field name="due_date"/>
                    <field name="paid_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Invoice Date" name="group_invoice_date" domain="[]" context="{'group_by': 'invoice_date'}"/>
                        
                        <filter string="Sale Team" name="group_sale_team_id" domain="[]" context="{'group_by': 'sale_team_id'}"/>
                        
                        <filter string="Sale Person" name="group_sale_person_id" domain="[]" context="{'group_by': 'sale_person_id'}"/>

                        <filter name="group_invoice_id" string="Invoice No." domain="[]" context="{'group_by': 'invoice_id'}"/>

                        <filter name="group_paid_date" string="Paid Date" domain="[]" context="{'group_by': 'paid_date'}"/>
                    </group>
                </search>
            </field>
        </record>

		<record id="action_invoice_due_report_invoice_due_sql_report" model="ir.actions.act_window">
			<field name="name">Credit on Return Report Tree</field>
			<field name="type">ir.actions.act_window</field> 
			<field name="context">{'search_default_before':'1','search_default_group_invoice_date': 1,'search_default_group_sale_person_id':1,'search_default_group_invoice_id':1}</field>
			<field name="res_model">invoice.due.sql.view</field>
			<field name="view_mode">tree,form</field>
			
		</record>


		 <menuitem 
		 	name="Credit on Return Report" 
		 	action="action_invoice_due_report_invoice_due_sql_report"
		 	id="menu_stock_age_report_stock_age_sql_report" 
            parent="sale.menu_sale_report" 
            sequence="10000"/>

	</data>
</odoo>