        <record id="action_stock_multi_scrap_damage_field_sale" model="ir.actions.act_window">
            <field name="name">Stock Scrap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.multi.scrap</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('is_van_scrap', '=', True)]</field>
            <field name="context">{'default_is_van_scrap': True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Multi Scrap products
              </p><p>
                Scrapping a product will remove it from your stock. The product will
                end up in a scrap location that can be used for reporting purpose.
              </p>
            </field>
        </record>

        <record id="action_stock_multi_scrap_damage" model="ir.actions.act_window">
            <field name="name">Stock Scrap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.multi.scrap</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('is_van_scrap', '!=', True)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Multi Scrap products
              </p><p>
                Scrapping a product will remove it from your stock. The product will
                end up in a scrap location that can be used for reporting purpose.
              </p>
            </field>
        </record>

        <record id="action_view_multi_scrap_tree_field_sale" model="ir.actions.act_window.view">
            <field name="sequence">5</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_multi_scrap_tree_view_field_sale"/>
            <field name="act_window_id" ref="action_stock_multi_scrap_damage_field_sale"/>
        </record>
        <record id="action_view_multi_scrap_form_field_sale" model="ir.actions.act_window.view">
            <field name="sequence">10</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_multi_scrap_form_view_field_sale"/>
            <field name="act_window_id" ref="action_stock_multi_scrap_damage_field_sale"/>
        </record>

        <record id="action_view_multi_scrap_tree" model="ir.actions.act_window.view">
            <field name="sequence">5</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_multi_scrap_tree_view"/>
            <field name="act_window_id" ref="action_stock_multi_scrap_damage"/>
        </record>
        <record id="action_view_multi_scrap_form" model="ir.actions.act_window.view">
            <field name="sequence">10</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_multi_scrap_form_view"/>
            <field name="act_window_id" ref="action_stock_multi_scrap_damage"/>
        </record>

        <record id="base_field_sale.menu_stock_damage_id" model="ir.ui.menu">
            <field name="action" ref="action_stock_multi_scrap_damage_field_sale"/>
        </record>

        <menuitem id="menu_stock_multi_scrap"
                  name="Stock Scrap"
                  parent="stock.menu_stock_warehouse_mgmt"
                  action="action_stock_multi_scrap_damage"
                  sequence="100"/>
    </data>
</odoo>