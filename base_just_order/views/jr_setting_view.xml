<odoo>
    <data>
        <record id="view_jr_config_tree" model="ir.ui.view">
            <field name="name">jr.config</field>
            <field name="model">jr.config</field>
            <field name="arch" type="xml">
                <tree string="JR Settings">
                    <field name="app_name"/>
                    <field name="shop_name"/>
                    <field name="description"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <record id="view_jr_config_form" model="ir.ui.view">
            <field name="name">jr.config</field>
            <field name="model">jr.config</field>
            <field name="arch" type="xml">
                <form string="JR Settings">
                    <sheet>
                        <group>
                            <group string="App Setting">
                                <field name="app_name" required="1"/>
                                <field name="key" invisible="1"/>
                                <field name="color" widget="colorpicker" string="App Theme Color"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="image_1920" widget="image" class="oe_avatar" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Working Hours">
                                <field name="working_hour" placeholder="Hours: 8:30 AM to 6:00 PM" required="1"/>
                                <field name="ph_no" required="1"/>
                                <field name="remark"/>
                            </group>
                            <group string="About Us">
                                <field name="shop_name" required="1"/>
                                <field name="phone"/>
                                <field name="address" required="1"/>
                            </group>
                            <group string="Pricelist">
<field name="pricelist_id" options="{'no_create': True}" string="Pricelist"/>
                            </group>
                            <group string="Payment Term">
<field name="property_payment_term_id" options="{'no_create': True}" string="Payment Term"/>
                            </group>
                            
                            <separator string="About Us"/>
                            <field name="description" string="About Us"
                                   placeholder="About Us Description Here . . .  . . . "/>
                        </group>

                        <notebook>
                            <page string="Banner Image">
                                <field name="product_mcom_image_ids" class="o_website_sale_image_list"
                                       context="{}" mode="kanban"
                                       add-label="Add Banner Image" nolabel="1">

                                    <kanban string="Product Images" default_order="sequence">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="image_1920"/>
                                        <field name="sequence" widget="handle"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="card oe_kanban_global_click p-0"
                                                     style="width:90px;height:90px">
                                                    <div class="o_squared_image">
                                                        <img style="width:160px;height:90px"
                                                             t-att-src="kanban_image('product.jr.images', 'image_1920', record.id.raw_value)"
                                                             t-att-alt="record.name.value"/>
                                                    </div>
                                                    <div class="card-body p-0">
                                                        <h4 class="card-title p-2 m-0 bg-200">
                                                            <small>
                                                                <field name="name"/>
                                                            </small>
                                                        </h4>
                                                    </div>
                                                    <!-- below 100 Kb: good -->
                                                    <t t-if="record.image_1920.raw_value.length &lt; 100*1000">
                                                        <t t-set="size_status" t-value="'badge-success'"/>
                                                        <t t-set="message">Acceptable file size</t>
                                                    </t>
                                                    <!-- below 1000 Kb: decent -->
                                                    <t t-elif="record.image_1920.raw_value.length &lt; 1000*1000">
                                                        <t t-set="size_status" t-value="'badge-warning'"/>
                                                        <t t-set="message">Huge file size. The image should be
                                                            optimized/reduced.
                                                        </t>
                                                    </t>
                                                    <!-- above 1000 Kb: bad -->
                                                    <t t-else="1">
                                                        <t t-set="size_status" t-value="'badge-danger'"/>
                                                        <t t-set="message">Optimization required! Reduce the image size
                                                            or
                                                            increase your compression settings.
                                                        </t>
                                                    </t>
                                                    <span t-attf-class="badge #{size_status} o_product_image_size"
                                                          t-esc="record.image_1920.value" t-att-title="message"/>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>

                                </field>
                            </page>
                            <page string="Access Token" groups="base.group_system,base.group_no_one">
                                <field name="access_token_ids">
                                    <tree editable="bottom">
                                        <field name="access_key"/>
                                        <field name="access_value"/>
                                    </tree>
                                </field>
                            </page>
                            <page groups="base.group_system,base.group_no_one" string="Terms &amp; Conditions">
                                    <field name="term_and_condition" placeholder="Terms &amp; Conditions . . . .  " nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="just_order_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">jr.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first order!
                </p>
            </field>
        </record>
    </data>
</odoo>