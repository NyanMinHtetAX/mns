<odoo>
    <record id="view_stock_quant_tree_on_hand_only_readonly" model="ir.ui.view">
        <field name="name">stock.quant.tree.disallow.access</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="groups_id" eval="[(6, 0, [ref('stock_extend.group_readonly_onhand_qty')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_quantity_auto_apply']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='inventory_quantity_auto_apply']" position="after">
                <field name="unit_value"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_quant_tree_on_hand_only_value" model="ir.ui.view">
        <field name="name">stock.quant.tree.value</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_quantity_auto_apply']" position="after">
                <field name="unit_value" sum="Total Value"/>
            </xpath>
        </field>
    </record>
</odoo>