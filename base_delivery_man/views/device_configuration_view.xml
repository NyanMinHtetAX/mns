<odoo>
    <record id="view_device_configuration_search" model="ir.ui.view">
        <field name="name">delivery.app.device.search</field>
        <field name="model">delivery.app.device</field>
        <field name="arch" type="xml">
            <search>
                <field name="delivery_man_id"/>
                <field name="device_model"/>
                <field name="device_id"/>
                <filter name="this_week_filter" string="This Week" domain="[
                ('create_date', '>=', (datetime.datetime.combine(context_today() + relativedelta(weeks=-1,days=1,weekday=0), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S')),
                ('create_date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(days=1,weekday=0), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter name="current_month" string="This Month"
                        domain="[('create_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),
                             ('create_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="Deliver Man" name="delivery_man_id" context="{'group_by': 'delivery_man_id'}"/>
                <filter string="Device Model" name="device_model" context="{'group_by': 'device_model'}"/>
            </search>
        </field>
    </record>
    <record id="view_device_configuration_form" model="ir.ui.view">
        <field name="name">delivery.app.device.form</field>
        <field name="model">delivery.app.device</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Device Information">
                        <group>
                            <field name="delivery_man_id" readonly="1"/>
                            <field name="device_model" readonly="1"/>
                        </group>
                        <group>
                            <field name="device_id" readonly="1"/>
                            <field name="fcm_token" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="device_configuration_tree" model="ir.ui.view">
        <field name="name">delivery.app.device.tree</field>
        <field name="model">delivery.app.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="delivery_man_id"/>
                <field name="device_model"/>
                <field name="device_id"/>
                <field name="create_date"/>
                <field name="write_date"/>
                <field name="fcm_token"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="action_device_configuration" model="ir.actions.act_window">
        <field name="name">Delivery App Devices</field>
        <field name="res_model">delivery.app.device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record of Delivery Man Register.
            </p>
            <p>
                You'll be able to manage your Device Register here.
            </p>
        </field>
    </record>
    <menuitem id="menu_device_configuration_root"
              name="Devices"
              parent="base.menu_custom"
              sequence="0"/>
    <menuitem id="menu_device_configuration"
              name="Delivery App Device"
              parent="menu_device_configuration_root"
              action="action_device_configuration"
              sequence="10"/>
</odoo>