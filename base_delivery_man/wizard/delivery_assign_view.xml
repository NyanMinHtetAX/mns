<odoo>
    <record id="delivery_assign" model="ir.ui.view">
        <field name="name">assign.delivery_form</field>
        <field name="model">assign.delivery</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="delivery_man_id" required="1"/> -->
                            <field name="sale_team_id" required="1"/>
                        </group>
                        <group>
                            <field name="delivery_man_picking_id" invisible="1"/>
                            <field name="picking_id" invisible="1"/>
                            <field name="order_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="assign_delivery" string="Assign" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="delivery_assign_alert" model="ir.ui.view">
        <field name="name">alert_delivery_form</field>
        <field name="model">alert.delivery</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="alert_name" nolabel="1" readonly="1" style="color:#006400"/>
                    </group>
                </sheet>
                <footer>
                    <button string="OK" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>