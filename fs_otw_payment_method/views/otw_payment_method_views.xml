<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="otw_payment_method_view_form" model="ir.ui.view">
        <field name="name">fieldsale.payment.method.form</field>
        <field name="model">otw.payment.method</field>
        <field name="arch" type="xml">
            <form string="Payment Methods">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Cash" class="oe_inline"/></h1>
                    </div>
                    <group name="Payment methods">
                        <group>
                            <field name="journal_id" placeholder="Leave empty to use the receivable account of customer" />
                            <field name="company_id" readonly="1" groups="base.group_multi_company" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="otw_payment_method_view_tree" model="ir.ui.view">
        <field name="name">fieldsale.payment.method.tree</field>
        <field name="model">otw.payment.method</field>
        <field name="arch" type="xml">
            <tree string="Payment Methods" create="1" delete="1">
                <field name="name" />
                <field name="journal_id"/>
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="otw_payment_method_view_search" model="ir.ui.view">
        <field name="name">fieldsale.payment.search.view</field>
        <field name="model">otw.payment.method</field>
        <field name="arch" type="xml">
            <search string="Payment Methods">
                <field name="name"/>
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_otw_payment_method_form" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">otw.payment.method</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" eval="False"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new payment method
            </p>
            <p>
                Installing chart of accounts from the General Settings of
                Invocing/Accounting app will create Bank and Cash payment
                methods automatically.
            </p>
        </field>
    </record>
    <menuitem id="menu_product_in_config_stock" name="Payment" parent="stock.menu_stock_config_settings" sequence="8"/>

    <menuitem id="menu_otw_payment_method" parent="menu_product_in_config_stock" action="action_otw_payment_method_form" sequence="10"/>

    <record id="action_payment_methods_tree" model="ir.actions.act_window">
        <field name="context">{}</field>
        <field name="name">Payments Methods</field>
        <field name="res_model">otw.payment.method</field>
        <field name="view_id" ref="otw_payment_method_view_tree"/>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>
