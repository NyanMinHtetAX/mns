<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_notify_wizard_form" model="ir.ui.view">
        <field name="name">notify.wizard.form</field>
        <field name="model">notify.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator string="Salesteam"/>
                    <field name="team_id"/>
                    <separator string="Title"/>
                    <field name="title"/>
                    <separator string="Message"/>
                    <field name="message" nolabel="1"/>
                </sheet>
                <footer>
                    <button special="cancel"
                            string="CANCEL"
                            class="btn-danger"/>
                    -
                    <button name="btn_notify"
                            string="Notify"
                            type="object"
                            class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>