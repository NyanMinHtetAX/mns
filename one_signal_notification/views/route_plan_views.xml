<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_route_plan_form_inherit" model="ir.ui.view">
        <field name="name">route.plan.form.inherit</field>
        <field name="model">route.plan</field>
        <field name="inherit_id" ref="fs_route_plan.view_route_plan_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[last()]" position="after">
                <button name="notify_to_sale_team"
                        string="Notify"
                        type="object"
                        attrs="{'invisible': ['|', ('sale_team_id', '=', False),
                                                   ('state', '!=', 'confirm')]}"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>