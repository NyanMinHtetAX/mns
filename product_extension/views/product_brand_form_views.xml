<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_brand_code" class="oe_inline" required="True"/>
                            <field name="name" class="oe_inline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="product_brand_tree" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_brand_code" required="True"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_brand">
        <field name="name">Product brand</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_brand"
              parent="stock.menu_stock_config_settings"
              action="action_product_brand" sequence="135"/>




</odoo>
