<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_tmpl_code_view" model="ir.ui.view">
            <field name="name">product.tmpl.code.view</field>
            <field name="model">internal.reference.code</field>
            <field name="arch" type="xml">
                <form string="Generate Internal Reference">
                    <group>
                        <p>This wizard will generate sequence number for internal reference!</p>
                    </group>
                    <footer>
                        <button string="Generate" name="action_product_tmpl_code" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_view_product_tmpl" model="ir.actions.act_window">
            <field name="name">Generate Internal Reference</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">internal.reference.code</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_tmpl_code_view" />
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_product_template"/>
            <field name="binding_view_types">list</field>
        </record>

        <record id="product_code_view" model="ir.ui.view">
            <field name="name">product.code.view</field>
            <field name="model">internal.reference.code</field>
            <field name="arch" type="xml">
                <form string="Generate Internal Reference">
                    <group>
                        <p>This wizard will generate sequence number for internal reference!</p>
                    </group>
                    <footer>
                        <button string="Generate" name="action_product_code" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_view_product" model="ir.actions.act_window">
            <field name="name">Generate Internal Reference</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">internal.reference.code</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_code_view" />
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_product_product"/>
            <field name="binding_view_types">list</field>
        </record>
    </data>
</odoo>