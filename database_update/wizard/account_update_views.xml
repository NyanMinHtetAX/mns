<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Journal Item -->
    <record id="date_update_generate_view_account_move" model="ir.ui.view">
        <field name="name">account.date.update.form.account.move</field>
        <field name="model">account.date.update</field>
        <field name="arch" type="xml">
            <form string="Write Date">
                <p class="oe_grey">
                   Please write your date.
                </p>
                <div style="width:100%;">
                    <div style="width:50%;">
                        <label for="date"/>
                        <field name="date"/>
                    </div>
                    <div style="width:50%;"/>
                </div>
                <footer>
                    <button string="Apply Date" name="apply_update_date" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_assign_date_account_move" model="ir.actions.act_window">
        <field name="name">Update Journal Date</field>
        <field name="res_model">account.date.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="date_update_generate_view_account_move"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [ref('database_update.group_update_account_date_access')])]"/>
    </record>

    <!-- Journal Item -->
    <record id="date_update_generate_view_account_move_line" model="ir.ui.view">
        <field name="name">account.date.update.form.account.move.line</field>
        <field name="model">account.line.date.update</field>
        <field name="arch" type="xml">
            <form string="Write Date">
                <p class="oe_grey">
                   Please write your date.
                </p>
                <div style="width:100%;">
                    <div style="width:50%;">
                        <label for="date"/>
                        <field name="date"/>
                    </div>
                    <div style="width:50%;"/>
                </div>
                <footer>
                    <button string="Apply Date" name="apply_update_date" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_assign_date_account_move_line" model="ir.actions.act_window">
        <field name="name">Update Journal Item Date</field>
        <field name="res_model">account.line.date.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="date_update_generate_view_account_move_line"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move_line"/>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [ref('database_update.group_update_account_date_access')])]"/>
    </record>

    <record id="date_update_generate_account_move_line_view" model="ir.ui.view">
        <field name="name">account.move.line.update.form</field>
        <field name="model">account.move.line.update</field>
        <field name="arch" type="xml">
            <form string="Write Account">
                <p class="oe_grey">
                   Please write your account.
                </p>
                <div style="width:100%;">
                    <div style="width:50%;">
                        <label for="account_id"/>
                        <field name="account_id"/>
                    </div>
                    <div style="width:50%;"/>
                </div>
                <footer>
                    <button string="Apply Account" name="apply_update_account" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_assign_update" model="ir.actions.act_window">
        <field name="name">Update Account</field>
        <field name="res_model">account.move.line.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="date_update_generate_account_move_line_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move_line"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>