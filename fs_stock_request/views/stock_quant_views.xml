<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_quant_tree_on_hand_only" model="ir.ui.view">
        <field name="name">stock.quant.tree.on.hand.only</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0" sample="1">
                <field name="id" invisible="1"/>
                <field name="tracking" invisible="1"/>
                <field name="product_id"/>
                <field name="product_categ_id" optional="hide"/>
                <field name="location_id"/>
                <field name="lot_id" groups="stock.group_production_lot"/>
                <field name="package_id" groups="stock.group_tracking_lot"/>
                <field name="owner_id" groups="stock.group_tracking_owner"/>
                <field name="inventory_quantity_auto_apply" string="On Hand Quantity"/>
                <field name="multi_uom_onhand_qty" string="Qty in UoM"/>
                <field name="available_quantity" optional="show"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </tree>
        </field>
    </record>
</odoo>