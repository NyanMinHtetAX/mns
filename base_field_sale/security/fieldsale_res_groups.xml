<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="category_field_sale" model="ir.module.category">
            <field name="name">Field Sale</field>
            <field name="description">Field Sales</field>
            <field name="sequence" eval="12"/>
        </record>
    <record id="group_field_sale_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="category_field_sale"/>
    </record>
    <record id="group_field_sale_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="category_field_sale"/>
         <field name="implied_ids" eval="[(4, ref('group_field_sale_user'))]"/>
    </record>
    <record id="group_field_sale_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="category_field_sale"/>
        <field name="implied_ids" eval="[(4, ref('group_field_sale_supervisor'))]"/>
    </record>
</odoo>