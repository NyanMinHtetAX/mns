<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mobile_device_reject_reason_wizard" model="ir.ui.view">
        <field name="name">mobile.device.reject.reason.wizard.form</field>
        <field name="model">mobile.device.reject.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="reason" required="1" nolabel="1" placeholder="Unverified phone number ...."/>
                    <field name="device_ids" invisible="1"/>
                </sheet>
                <footer>
                    <button name="btn_reject"
                            string="Reject"
                            type="object"
                            class="btn-danger"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>