<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_field_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='fs_data_storage']" position="after"> 
                <h2>Sale Consignment</h2>
                <div class="row mt16 o_settings_container" name="sale_consignment">
                    <div class="col-12 col-lg-6 o_setting_box" title="Consignment Warehouse">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Consignment Warehouse</span>
                            <div class="text-muted">
                                <field name="consignment_warehouse_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>