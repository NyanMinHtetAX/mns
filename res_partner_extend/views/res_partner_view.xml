<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active_lang_count']" position="after">
                <label for="latitude" string="Location"/>
                <div class="o_row">
                    <field name="latitude" nolabel="1" class="oe_inline"
                           placeholder=".. . . . . . . .Latitude. . . . . . . ."/>
                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                    <field name="longitude" nolabel="1" class="oe_inline"
                           placeholder=". . . . . . . .Longitude . . . . . . ."/>
                </div>
            </xpath>
            <xpath expr="//field[@name='company_register_id']" position="after">
                <field name="sale_channel_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                <field name="outlet_type"
                       attrs="{'invisible': [('customer', '!=', True)],
                               'required': [('customer', '=', True)]}"
                       options="{'no_create': True, 'no_open': True}"/>

            </xpath>
            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="code" readonly="1" string="Code"/>
                <field name="custom_payment_for_sale" invisible="1" force_save="1"/>
                <field name="custom_payment_for_purchase" invisible="1" force_save="1"/>
            </xpath>
            <xpath expr="//notebook//page//field[@name='child_ids']//form//group//group[2]//field[@name='mobile']"
                       position="after">
                    <label for="latitude" string="Location"/>
                <div class="o_row">
                    <field name="latitude" nolabel="1" class="oe_inline"
                           placeholder=".. . . . . . . .Latitude. . . . . . . ."/>
                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                    <field name="longitude" nolabel="1" class="oe_inline"
                           placeholder=". . . . . . . .Longitude . . . . . . ."/>
                </div>
                </xpath>
            <xpath expr="//notebook//page[@name='sales_purchases']//group[@name='misc']//field[@name='company_id']"
                   position="after">
                <field name="is_credit_limit" invisible="1"/>
            </xpath>
            <xpath expr="//notebook//page[@name='sales_purchases']//group[@name='sale']//field[@name='user_id']"
                   position="before">
                <field name="is_mobile_customer" invisible="1"/>
            </xpath>

        </field>
    </record>
    <record id="view_res_partner_search" model="ir.ui.view">
        <field name="name">res.partner.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="team_id"/>
                <field name="sale_channel_ids"/>
                <field name="outlet_type"/>
                <field name="custom_payment_for_sale"/>
                <field name="custom_payment_for_purchase"/>
            </xpath>
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter name="group_team_id" string="Sales Team" context="{'group_by': 'team_id'}"/>
                <filter name="group_outlet" string="Outlet" context="{'group_by': 'outlet_type'}"/>
                <filter name="group_sale_payment_term" string="Sale Payment Term" context="{'group_by': 'custom_payment_for_sale'}"/>
                <filter name="group_purchase_payment_term" string="Purchase Payment Term" context="{'group_by': 'custom_payment_for_purchase'}"/>
            </xpath>
        </field>
    </record>
