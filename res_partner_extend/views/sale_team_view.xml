<odoo>
        <record id="crm_team_salesteams_view_form" model="ir.ui.view">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="priority">9</field>
            <field name="inherit_id" ref="sale.crm_team_salesteams_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options_active']" position="before">
                    <field name="code" required="1" placeholder="Code: e.g. SA"/>
                </xpath>
            </field>
        </record>
</odoo>