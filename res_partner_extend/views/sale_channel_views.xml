<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_res_sale_channel_tree" model="ir.ui.view">
        <field name="name">res.sale.channel.form</field>
        <field name="model">res.sale.channel</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_res_sale_channel" model="ir.actions.act_window">
        <field name="name">Sale Channel</field>
        <field name="res_model">res.sale.channel</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sale channel here.
            </p>
            <p>
                You'll be able to manage your sale channels here.
            </p>
        </field>
    </record>
    <menuitem id="menu_res_sale_channel"
              name="Sale Channel"
              parent="contacts.res_partner_menu_config"
              action="action_res_sale_channel"
              sequence="1000"/>
</odoo>