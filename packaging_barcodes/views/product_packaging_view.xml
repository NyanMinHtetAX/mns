<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_packaging_form_view_form_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='name']" position="attributes">
            	<attribute name = 'invisible'>1</attribute>
            </xpath>
            <xpath expr="//h1[1]" position="attributes">
            	<attribute name = 'invisible'>1</attribute>
            </xpath>
            <xpath expr="//group[1]" position="before">
                <label for="multi_uom_id" string="Packaging"/>
                <h1>
                	<field name='avaiable_multi_uoms' invisible = '1' />
                    <field name="multi_uom_id" required = '	1' domain = "[('id', 'in', avaiable_multi_uoms)]" options = "{'create': 0}"/>
                </h1>
            </xpath>
            <xpath expr="//field[@name='sales']" position="after">
            	<field name='use_in_pos' />
            </xpath>
        </field>
    </record>
</odoo>